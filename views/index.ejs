        </section>
    </main>

    <footer>
        <div class="social-media">
            <a href="https://linkedin.com/in/lpalma1999" target="_blank"><i class="fab fa-linkedin"></i></a>
            <a href="https://github.com/palmaz9" target="_blank"><i class="fab fa-github"></i></a>
        </div>
        <p>&copy; 2024 Lucas Palma. All rights reserved.</p>
    </footer>

    <script>
        // Remove preventDefault for navigation links
        $(document).ready(function () {
            $('nav ul li a').on('click', function (event) {
                if ($(this).attr('href').startsWith('#')) {
                    event.preventDefault(); // Only prevent default for anchor links within the page
                    $('html, body').animate({
                        scrollTop: $($(this).attr('href')).offset().top
                    }, 1000);
                }
            });
        });

        // GSAP animations for cards
        gsap.from(".employment-history", { duration: 1, y: 50, opacity: 0, delay: 0.5 });
        gsap.from(".skills-section", { duration: 1, y: 50, opacity: 0, delay: 1 });
        gsap.from(".education-section", { duration: 1, y: 50, opacity: 0, delay: 1.5 });
        gsap.from(".languages-section", { duration: 1, y: 50, opacity: 0, delay: 2 });

        // ScrollMagic to trigger animations on scroll
        var controller = new ScrollMagic.Controller();

        new ScrollMagic.Scene({
            triggerElement: ".employment-history",
            triggerHook: 0.9,
            reverse: false
        })
            .setClassToggle(".employment-history", "visible")
            .addTo(controller);

        new ScrollMagic.Scene({
            triggerElement: ".skills-section",
            triggerHook: 0.9,
            reverse: false
        })
            .setClassToggle(".skills-section", "visible")
            .addTo(controller);

        new ScrollMagic.Scene({
            triggerElement: ".education-section",
            triggerHook: 0.9,
            reverse: false
        })
            .setClassToggle(".education-section", "visible")
            .addTo(controller);

        new ScrollMagic.Scene({
            triggerElement: ".languages-section",
            triggerHook: 0.9,
            reverse: false
        })
            .setClassToggle(".languages-section", "visible")
            .addTo(controller);
    </script>
</body>

</html>
