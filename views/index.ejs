<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <!-- Include Google Fonts for modern typography -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <!-- Include Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Add some animations -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <!-- Include jQuery for scroll effect -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Include GSAP for animations -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/gsap.min.js"></script>
    <!-- Include ScrollMagic for scroll effects -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.7/ScrollMagic.min.js"></script>
</head>

<body>
    <header>
        <h1 class="animate__animated animate__fadeInDown">Lucas Palma</h1>
        <nav>
            <ul>
                <li><a href="/">Main Page</a></li>
                <li><a href="/projects">Projects</a></li>
                <li><a href="/references">References</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <section class="hero">
            <h2 class="animate__animated animate__fadeInDown">Welcome to My Portfolio</h2>
            <p class="animate__animated animate__fadeInUp">A showcase of my work and skills.</p>
        </section>

        <section class="content">
            <div class="card" id="employment-card">
                <h3>Employment History</h3>
                <p><strong>Graduate Teaching Assistant</strong> - Pittsburg State University (10/2023 to 05/2024)</p>
                <ul>
                    <li>Provided Excel technical support and Pivot Table training</li>
                    <li>Developed a database analysis for student communication engagement</li>
                </ul>
                <p><strong>Legal Efficiency Intern</strong> - Braskem S.A. (11/2020 to 12/2021)</p>
                <ul>
                    <li>Executed database cleaning, querying, and optimization tasks weekly</li>
                    <li>Created visual dashboards using Power BI</li>
                    <li>Developed a VBA algorithm to efficiently send auditing emails</li>
                </ul>
                <p><strong>Retail Intern</strong> - Raizen S.A. (01/2018 to 03/2019)</p>
                <ul>
                    <li>Manipulated Salesforce reports and conducted analysis using Pivot Tables</li>
                    <li>Provided comprehensive reports for strategic decision-making</li>
                </ul>
            </div>

            <div class="card" id="skills-card">
                <h3>Skills</h3>
                <ul>
                    <li>SQL, Power BI Development, Salesforce, MS Excel</li>
                    <li>R, RStudio, Machine Learning, NumPy, scikit-learn, pandas, matplotlib</li>
                    <li>Python, Visual Basic, Java, Dart, Google Apps Script</li>
                    <li>HTML, CSS, JavaScript</li>
                </ul>
            </div>

            <div class="card" id="education-card">
                <h3>Education</h3>
                <p><strong>Master of Science in Technology, Emphasis in Information Technology</strong> - Pittsburg State University (05/2024)</p>
                <p><strong>Bachelor of Business Administration</strong> - Salvador University (12/2021)</p>
            </div>

            <div class="card" id="languages-card">
                <h3>Languages</h3>
                <p>English: Fluent</p>
                <p>Portuguese: Native</p>
            </div>
        </section>
    </main>

    <footer>
        <div class="social-media">
            <a href="https://linkedin.com/in/lpalma1999" target="_blank"><i class="fab fa-linkedin"></i></a>
            <a href="https://github.com/palmaz9" target="_blank"><i class="fab fa-github"></i></a>
        </div>
        <p>&copy; 2024 Lucas Palma. All rights reserved.</p>
    </footer>

    <script>
        // Remove preventDefault for navigation links
        $(document).ready(function () {
            // Remove preventDefault for external links
            $('nav ul li a').on('click', function (event) {
                if ($(this).attr('href').startsWith('#')) {
                    event.preventDefault(); // Only prevent default for anchor links within the page
                    $('html, body').animate({
                        scrollTop: $($(this).attr('href')).offset().top
                    }, 1000);
                }
            });
        });

        // GSAP animations for cards
        gsap.from("#employment-card", { duration: 1, y: 50, opacity: 0, delay: 0.5 });
        gsap.from("#skills-card", { duration: 1, y: 50, opacity: 0, delay: 1 });
        gsap.from("#education-card", { duration: 1, y: 50, opacity: 0, delay: 1.5 });
        gsap.from("#languages-card", { duration: 1, y: 50, opacity: 0, delay: 2 });

        // ScrollMagic to trigger animations on scroll
        var controller = new ScrollMagic.Controller();

        var scene1 = new ScrollMagic.Scene({
            triggerElement: "#employment-card",
            triggerHook: 0.9,
            reverse: false
        })
            .setClassToggle("#employment-card", "visible")
            .addTo(controller);

        var scene2 = new ScrollMagic.Scene({
            triggerElement: "#skills-card",
            triggerHook: 0.9,
            reverse: false
        })
            .setClassToggle("#skills-card", "visible")
            .addTo(controller);

        var scene3 = new ScrollMagic.Scene({
            triggerElement: "#education-card",
            triggerHook: 0.9,
            reverse: false
        })
            .setClassToggle("#education-card", "visible")
            .addTo(controller);

        var scene4 = new ScrollMagic.Scene({
            triggerElement: "#languages-card",
            triggerHook: 0.9,
            reverse: false
        })
            .setClassToggle("#languages-card", "visible")
            .addTo(controller);
    </script>
</body>

</html>
